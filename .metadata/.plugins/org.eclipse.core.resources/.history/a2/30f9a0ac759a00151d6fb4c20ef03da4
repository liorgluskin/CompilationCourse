package semantic;

/**
 * Exception thrown when semantic error found in program
 */
public class SemanticError extends Exception {
	
	private static final long serialVersionUID = 1L;
	private int lineNum;
	private String value;
	
	public SemanticError(String message, int lineNum, String value){
		super(message);
		this.lineNum = lineNum;
		this.value = value;
	}
	
	public SemanticError(String message, String value){
		super(message);
		this.lineNum = -1;
		this.value = value;
	}
	
	 /**
     * returns a string representation for the error with line number, message and the token that
     * caused the syntax error
     */
	public String toString(){
		return "Semantic error at line "+lineNum+": "+this.getMessage()+": "+value;
	}
	
	/**
	 * set the error's line
	 * @param line
	 */
	public void setLineNum(int lineNum){
		this.lineNum = lineNum;
	}
}